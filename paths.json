
{
    "server_entry_point": "bin/js/index.js",
    "input": "src",
    "output": "bin/",
    "clear": "bin/*",
    "html": {
        "input": [
            "src/front-end/**/*"
        ],
        "clear": "bin/www/*",
        "output": "bin/www/"
    },
    "youtube_dl": {
        "input": "src/youtube_dl/*",
        "output": "bin/youtube_dl/"
    },
    "scripts": {
        "input": "src/ts/*",
        "output_definitions": "bin/js/definitions/",
        "source_maps": "./source_maps/",
        "clear": "bin/js/*",
        "output": "bin/js/"
    },
    "docs": {
        "input": "src/docs/*.{html,md,markdown}",
        "output": "docs/",
        "templates": "src/docs/_templates/",
        "assets": "src/docs/assets/**"
    }
}
